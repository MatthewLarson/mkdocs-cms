<section class="dashboard-view">
  <div class="row">

    <div class="col-md-4 form-section">
      <a href="/static-site" class="btn btn-primary">Generate And Download Static Files</a>
    </div>

    <div class="col-md-5 form-section">
      <form class="form-inline version-form" action="/dashboard" method="POST">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">Site Title:</div>
            <input type="text" name="siteName" class="form-control site-name" id="site-name" placeholder="{{site_name}}" required>
          </div>
        </div>
        <button type="submit" class="btn btn-default">Change</button>
      </form>
    </div>

    <div class="col-md-3 form-section">
      <form class="form-inline" action="/version" method="POST">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">Version:</div>
            <input type="text" name="version" class="form-control version" id="version" placeholder="{{ extra.version }}" required>
          </div>
        </div>
        <button type="submit" class="btn btn-default">Change</button>
      </form>
    </div>

  </div>
</section>